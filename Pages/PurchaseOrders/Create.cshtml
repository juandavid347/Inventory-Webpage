@page
@model Inventory.Pages.PurchaseOrders.CreateModel

<!-- Create New Purchase Order Page -->

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PurchaseOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PurchaseOrder.Vendor" class="control-label"></label>
                <select asp-for="PurchaseOrder.VendorID" class ="form-control" asp-items="@Model.VendorNameSL"></select>
                <span asp-validation-for="PurchaseOrder.VendorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseOrder.Date" class="control-label"></label>
                <input type="datetime-local" asp-for="PurchaseOrder.Date" class="form-control" />
                <span asp-validation-for="PurchaseOrder.Date" class="text-danger"></span>
            </div>

            <!-- For each new item added redirectes to a new page -->

            <div class="form-group">
                <a asp-page="./Create" asp-route-itemsCount="@Model.count">Add Item</a>
            </div>
            
            @foreach (var item in Model.purchaseItems)
            {
                <div class="form-group">
                    <label asp-for="@item.ItemID" class="control-label">Item</label>
                    <select name="itemsID" asp-for="@item.ItemID" asp-items="Model.ItemsSL" class="form-control"></select>
                    <span asp-validation-for="@item.ItemID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@item.Quantity" class="control-label"></label>
                    <input type="number"  name="itemsQuantity" class="form-control"/>
                    <span asp-validation-for="@item.Quantity" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}