@page
@model Inventory.Pages.PurchaseOrders.EditModel

<!-- Edit Purchase Order Page -->

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PurchaseOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PurchaseOrder.PurchaseID" />
            <div class="form-group">
                <label asp-for="PurchaseOrder.Vendor" class="control-label"></label>
                <select asp-for="PurchaseOrder.VendorID" class="form-control" asp-items="@Model.VendorNameSL"></select>
                <span asp-validation-for="PurchaseOrder.VendorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseOrder.Date" class="control-label"></label>
                <input asp-for="PurchaseOrder.Date" class="form-control" />
                <span asp-validation-for="PurchaseOrder.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseOrder.Status" class="control-label"></label>
                <input asp-for="PurchaseOrder.Status" class="form-control" />
                <span asp-validation-for="PurchaseOrder.Status" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.purchaseItems.Count; i++){
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => Model.purchaseItems[i].Item)
                </dt>
                <dd class="col-sm-10">
                    <select asp-for="@Model.purchaseItems[i].ItemID" value="@Model.purchaseItems[i].ItemID" asp-items="Model.ItemsSL" class="form-control"></select>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => Model.purchaseItems[i].Quantity)
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="@Model.purchaseItems[i].Quantity" type="number" value="@Model.purchaseItems[i].Quantity" class="form-control"/>
                </dd>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}