@page
@model Inventory.Pages.PurchaseOrders.IndexModel

<!-- Purchase Orders Index Page -->

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseOrder[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseOrder[0].Vendor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseOrder[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PurchaseOrder) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PurchaseID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PurchaseID">Details</a> |
                <a asp-page="./Print" asp-route-id="@item.PurchaseID">Print</a> |
                <a asp-page="./Delete" asp-route-id="@item.PurchaseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>